{
    "name": "mohammad19khodaei/unit-conversion",
    "description": "Perfom unit conversion in PHP",
    "keywords": [
        "mohammad19khodaei",
        "unit-conversion"
    ],
    "homepage": "https://github.com/mohammad19khodaei/unit-conversion",
    "license": "MIT",
    "authors": [
        {
            "name": "Mohammad Khodaei",
            "email": "mohammad19khodaei@gmail.com",
            "homepage": "https://spatie.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpunit/phpunit": "^9.3",
        "vimeo/psalm": "^3.11"
    },
    "autoload": {
        "psr-4": {
            "Mohammad19khodaei\\UnitConversion\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mohammad19khodaei\\UnitConversion\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/spatie"
        },
        {
            "type": "other",
            "url": "https://spatie.be/open-source/support-us"
        }
    ]
}
